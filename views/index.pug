extends layout

block content
    nav.navbar.fixed-top.navbar-expand-lg.navbar-dark.bg-dark
        a.navbar-brand(href='/dashboard') Murphy's Maths
        button.navbar-toggler(
            type='button'
            data-toggle='collapse'
            data-target='#navbarMain'
            aria-controls='navbarMain'
            aria-expanded='false'
            aria-label="Toggle navigation"
        )
            span.navbar-toggler-icon
        #navbarMain.collapse.navbar-collapse
            ul.navbar-nav.mr-auto
                li.nav-item(class=(activeItem === "home" ? "active" : undefined))
                    a.nav-link(href="/dashboard") Home
                        if activeItem === "home"
                            span.sr-only='(current)'
                li.nav-item(class=(activeItem === "traffic" ? "active" : undefined))
                    a.nav-link(href='/dashboard/traffic') Traffic
                        if activeItem === "traffic"
                            span.sr-only='(current)'
                li.nav-item(class=(activeItem === "videos" ? "active" : undefined))
                    a.nav-link(href='/dashboard/videos') Videos
                        if activeItem === "videos"
                            span.sr-only='(current)'
                li.nav-item(class=(activeItem === "video-requests" ? "active" : undefined))
                    a.nav-link(href='/dashboard/video-requests') Video Requests
                        if activeItem === "video-requests"
                            span.sr-only='(current)'
            ul.navbar-nav
                li.nav-item.dropdown
                    a#navbarMainUserDropdown.nav-link.dropdown-toggle(
                        href='#'
                        role='button'
                        data-toggle='dropdown'
                        aria-haspopup='true'
                        aria-expanded='false'
                        aria-label='Toggle navigation'
                    ) #{fullname}
                    .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarMainUserDropdown')
                        a.dropdown-item(href='/dashboard/profile') Profile
                        .dropdown-divider
                        a.dropdown-item(href='/dashboard/help') Help
                        a.dropdown-item(href='/dashboard/settings') Settings
                        a.dropdown-item(href='/logout?nonce=' + logoutNonce) Logout
    .container-fluid(style='padding-top: 70px;')
        block dashboardContent